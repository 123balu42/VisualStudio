<pfui:DialogWindow
    x:Class="GitHub.VisualStudio.UI.Views.CreateIssueDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:pfui="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.12.0"
    mc:Ignorable="d" 
    d:DesignHeight="300"
    d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0">Summary</Label>
        <TextBox x:Name="subjectTextBox" Grid.Row="0" Grid.Column="1" />
        <Label Grid.Row="1" Grid.Column="0">Description</Label>
        <TextBox Grid.Row="1" Grid.Column="1" />
    </Grid>
</pfui:DialogWindow>
